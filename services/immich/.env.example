# Immich Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Database Configuration
# =====================

# PostgreSQL database hostname
IMMICH_DB_HOSTNAME=postgres

# Database credentials
IMMICH_DB_USER=immich
IMMICH_DB_PASSWORD=
IMMICH_DB_NAME=immich

# =====================
# API & Integration
# =====================

# API key for homepage widget
IMMICH_API_KEY=

# =====================
# OIDC Configuration
# =====================

# OIDC client credentials for Authelia integration
IMMICH_OIDC_CLIENT_ID=
IMMICH_OIDC_CLIENT_SECRET=

# OIDC client secret hash (REQUIRED)
# Generate with: authelia crypto hash generate pbkdf2
IMMICH_CLIENT_SECRET_HASH=
