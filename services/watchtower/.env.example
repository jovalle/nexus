# Watchtower Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Session & Security
# =====================

# Secret for session encryption (REQUIRED)
WATCHTOWER_SESSION_SECRET=

# =====================
# IMDB Integration
# =====================

# Comma-separated list of IMDB watchlist URLs
WATCHTOWER_IMDB_WATCHLISTS=

# =====================
# Plex Integration
# =====================

# Plex client ID
WATCHTOWER_PLEX_CLIENT_ID=

# Plex server URL
WATCHTOWER_PLEX_SERVER_URL=

# Plex authentication token
WATCHTOWER_PLEX_TOKEN=

# =====================
# TMDB Integration
# =====================

# TMDB API key
WATCHTOWER_TMDB_API_KEY=

# =====================
# Trakt Integration
# =====================

# Trakt API client ID
WATCHTOWER_TRAKT_CLIENT_ID=

# Trakt API client secret
WATCHTOWER_TRAKT_CLIENT_SECRET=

# Trakt username
WATCHTOWER_TRAKT_USERNAME=

# =====================
# Server Configuration
# =====================

# Server port
WATCHTOWER_PORT=9001
