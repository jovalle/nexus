# Tailscale Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Authentication
# =====================

# Tailscale auth key (REQUIRED)
# Generate at: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTH_KEY=

# =====================
# OAuth Client (for API access)
# =====================

# Tailscale OAuth client credentials
# Generate at: https://login.tailscale.com/admin/settings/oauth
TAILSCALE_CLIENT_ID=
TAILSCALE_CLIENT_SECRET=

# =====================
# Homepage Widget
# =====================

# Device ID for homepage widget (REQUIRED)
# Find in Tailscale admin console or via: tailscale status --json
TAILSCALE_DEVICE_ID=
