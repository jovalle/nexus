# Authelia Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Session & Encryption
# =====================

# Secret used for session encryption (REQUIRED)
# Generate with: openssl rand -hex 32
AUTHELIA_SESSION_SECRET=

# Key used to encrypt data in storage (REQUIRED)
# Generate with: openssl rand -hex 32
AUTHELIA_STORAGE_ENCRYPTION_KEY=

# JWT secret for identity tokens (REQUIRED)
# Generate with: openssl rand -hex 32
AUTHELIA_JWT_SECRET=

# =====================
# OIDC Configuration
# =====================

# HMAC secret for OIDC (REQUIRED)
# Generate with: openssl rand -hex 32
AUTHELIA_OIDC_HMAC_SECRET=

# OIDC client secret for webapp (REQUIRED)
AUTHELIA_OIDC_CLIENT_WEBAPP_SECRET=

# OIDC issuer private key (REQUIRED)
# Generate with: openssl genrsa 4096
AUTHELIA_OIDC_ISSUER_PRIVATE_KEY=

# =====================
# Admin Account
# =====================

# Argon2 hashed admin password (REQUIRED)
# Generate with: authelia crypto hash generate argon2
AUTHELIA_USER_ADMIN_PASSWORD_HASH=
