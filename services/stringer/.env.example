# Stringer Environment Variables
# Copy this file to .env and fill in your values

# =====================
# Database Configuration
# =====================

# PostgreSQL database password
STRINGER_DB_PASSWORD=

# =====================
# Security Keys
# =====================

# Rails secret key base (REQUIRED)
# Generate with: openssl rand -hex 64
STRINGER_SECRET_KEY_BASE=

# Primary encryption key for Active Record encryption (REQUIRED)
# Generate with: openssl rand -hex 16
STRINGER_ENCRYPTION_PRIMARY_KEY=

# Deterministic encryption key (REQUIRED)
# Generate with: openssl rand -hex 16
STRINGER_ENCRYPTION_DETERMINISTIC_KEY=

# Key derivation salt (REQUIRED)
# Generate with: openssl rand -hex 16
STRINGER_ENCRYPTION_KEY_DERIVATION_SALT=

# Secret token (optional)
STRINGER_SECRET_TOKEN=
