# =============================================================================
# NEXUS DOCKER COMPOSE ENVIRONMENT VARIABLES
# =============================================================================
# This file contains all environment variables needed to run the compose services.
# Copy this file to .env and fill in your actual values.

# -----------------------------------------------------------------------------
# GENERAL / PATHS
# -----------------------------------------------------------------------------
DATA_PATH=./docker
STACKS_PATH=./stacks
MEDIA_PATH=/path/to/media
BACKUP_PATH=/path/to/backups
NEXTCLOUD_DATA_PATH=/path/to/nextcloud/data

# -----------------------------------------------------------------------------
# SYSTEM / TIMEZONE
# -----------------------------------------------------------------------------
TZ=America/New_York
PUID=1000
PGID=1000
GID=1000

# -----------------------------------------------------------------------------
# DOMAIN CONFIGURATION
# -----------------------------------------------------------------------------
DOMAIN=example.com
DOMAIN_EXT=external.example.com

# -----------------------------------------------------------------------------
# CLOUDFLARE
# -----------------------------------------------------------------------------
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_DNS_API_TOKEN=your_cloudflare_dns_api_token

# -----------------------------------------------------------------------------
# ADMIN CREDENTIALS (General)
# -----------------------------------------------------------------------------
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me

# -----------------------------------------------------------------------------
# SERVICE-SPECIFIC CREDENTIALS
# -----------------------------------------------------------------------------

# AdGuard Home (DNS server)
# (Uses ADMIN_USERNAME and ADMIN_PASSWORD)

# Authelia (Authentication)
# No env vars required - configured via files

# Bazarr (Subtitle manager)
BAZARR_API_KEY=

# Beszel (Monitoring)
BESZEL_ADMIN_USER=admin
BESZEL_ADMIN_PASSWORD=change_me
BESZEL_AGENT_KEY=your_beszel_agent_key

# Dockpeek (Docker monitoring)
DOCKPEEK_USERNAME=admin
DOCKPEEK_PASSWORD=change_me
DOCKPEEK_SECRET_KEY=your_secret_key

# Duplicati (Backup) - DEPRECATED: Use Restic instead
DUPLICATI_WEB_PASSWORD=change_me
DUPLICATI_ENCRYPTION_KEY=your_encryption_key

# Restic (Incremental Backup)
RESTIC_PASSWORD=your_strong_restic_password
BACKUP_CRON=0 2 * * *

# Garage (S3-compatible storage)
GARAGE_RPC_SECRET=your_garage_rpc_secret

# Gluetun (VPN client)
GLUETUN_API_KEY=your_gluetun_api_key
WIREGUARD_ADDRESSES=10.x.x.x/32
WIREGUARD_ENDPOINT_IP=x.x.x.x
WIREGUARD_ENDPOINT_PORT=51820
WIREGUARD_PRIVATE_KEY=your_wireguard_private_key
WIREGUARD_PUBLIC_KEY=your_wireguard_public_key

# Grafana (Metrics visualization)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me

# Homehub (Dashboard)
HOMEHUB_SECRET_KEY=your_secret_key

# Imdbarr (IMDb watchlist manager)
IMDBARR_BASE_URL=https://imdbarr.example.com
TMDB_API_KEY=your_tmdb_api_key

# Immich (Photo management)
IMMICH_VERSION=release
IMMICH_DB_NAME=immich
IMMICH_DB_USER=immich
IMMICH_DB_PASSWORD=change_me
IMMICH_DB_HOSTNAME=postgres
IMMICH_API_KEY=

# Jellyfin (Media server)
JELLYFIN_API_KEY=

# Lidarr (Music manager)
LIDARR_API_KEY=

# MariaDB
MYSQL_DATABASE=your_database
MYSQL_USER=your_user
MYSQL_PASSWORD=change_me

# Meilisearch (Search engine)
MEILI_MASTER_KEY=your_master_key

# Navidrome (Music streamer)
NAVIDROME_API_USER=
NAVIDROME_API_TOKEN=
NAVIDROME_API_SALT=

# Newt (Tunneling)
NEWT_ID=your_newt_id
NEWT_SECRET=your_newt_secret

# Nextcloud (Cloud storage)
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=change_me
NEXTCLOUD_DB_NAME=nextcloud
NEXTCLOUD_DB_USER=nextcloud
NEXTCLOUD_DB_PASSWORD=change_me

# Overseerr (Media requests)
OVERSEERR_API_KEY=

# Paperless (Document management)
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=change_me
PAPERLESS_ADMIN_MAIL=admin@example.com
PAPERLESS_DB_USERNAME=paperless
PAPERLESS_DB_PASSWORD=change_me

# pgAdmin (PostgreSQL management)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=change_me

# Plex (Media server)
PLEX_API_KEY=
PLEX_TOKEN=

# Portainer (Container management)
PORTAINER_ADMIN_PASSWORD_HASH=your_bcrypt_hash
PORTAINER_API_KEY=

# PostgreSQL (Database)
POSTGRES_ROOT_PASSWORD=change_me

# Prowlarr (Indexer manager)
PROWLARR_API_KEY=

# qBittorrent (Torrent client)
QBITTORRENT_WEBUI_USERNAME=admin
QBITTORRENT_WEBUI_PASSWORD=change_me

# Radarr (Movie manager)
RADARR_API_KEY=

# Reddit (for upvote-rss)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER=your_reddit_username

# Sabnzbd (Usenet downloader)
SABNZBD_API_KEY=

# Sonarr (TV show manager)
SONARR_API_KEY=

# Stringer (RSS reader)
STRINGER_DB_PASSWORD=change_me
STRINGER_ENCRYPTION_DETERMINISTIC_KEY=your_key
STRINGER_ENCRYPTION_KEY_DERIVATION_SALT=your_salt
STRINGER_ENCRYPTION_PRIMARY_KEY=your_primary_key
STRINGER_SECRET_KEY_BASE=your_secret_key_base

# Tailscale (VPN mesh network)
TAILSCALE_AUTH_KEY=your_tailscale_auth_key

# Tautulli (Plex monitoring)
TAUTULLI_API_KEY=

# Watchtower (Container updater)
WATCHTOWER_HTTP_API_TOKEN=your_api_token
